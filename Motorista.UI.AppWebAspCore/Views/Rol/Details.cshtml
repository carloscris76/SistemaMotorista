@model Motorista.Entidades.DeNegocio.Rol

@{
    ViewData["Title"] = "Details";
}
<div class ="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-secondary">Ver Rol</h6>
    </div>
    <div class="card-body">
        <div>
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Nombre)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Nombre)
                </dd>
            </dl>
        </div>
        <br />
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    @Html.ActionLink("Ir a modificar", "Edit", new { id = Model.Id }, new { @class = "btn btn-info" })
                    <a asp-action="Index" class="btn btn-dark">Cancelar</a>
                </div>
            </div>
        </div>
    </div>
</div>